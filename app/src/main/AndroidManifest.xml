<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.EnglishBeginner">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo3"
        android:roundIcon="@drawable/logo3"
        android:label="@string/LearningEnglish"
        android:networkSecurityConfig="@xml/network_security_config"
        android:supportsRtl="true"
        android:theme="@style/Theme.Menu_Right"
        android:usesCleartextTraffic="true">
        <activity
            android:name="com.example.EnglishBeginner.learn.TestWriteActivity"
            android:exported="false" />
        <activity
            android:name="com.example.EnglishBeginner.learn.TestChooseImageActivity"
            android:exported="false" />
        <activity
            android:name="com.example.EnglishBeginner.Admin.AdminInterface"
            android:exported="false" />
        <activity
            android:name="com.example.EnglishBeginner.Login.ForgetPassword"
            android:exported="false" />
        <activity
            android:name="com.example.EnglishBeginner.main_interface.UserInterfaceActivity"
            android:exported="true" />
        <activity
            android:name="com.example.EnglishBeginner.Login.RegisterUser"
            android:exported="true" />
        <activity
            android:name="com.example.EnglishBeginner.Login.Login"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name" />
        <activity
            android:name="com.facebook.CustomTabActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="@string/fb_login_protocol_scheme" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.EnglishBeginner.learn.TestSelectionEnglishActivity"
            android:exported="false" />
        <activity
            android:name="com.example.EnglishBeginner.profile.EditProfileActivity"
            android:exported="false" />
        <activity
            android:name="com.example.EnglishBeginner.learn.LearningEnglishActivity"
            android:exported="false" />
    </application>

</manifest>