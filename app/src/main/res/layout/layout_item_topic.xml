<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_btn_lesson"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:elevation="4dp"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:background="@drawable/ct_layout_item_recycleview_learn"
        android:gravity="center"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgTopic"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/iamsky" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/learn_progress_bar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="68dp"
        android:layout_height="8dp"
        android:layout_gravity="center"
        android:layout_marginTop="4dp"
        android:max="40"
        android:progress="10"
        android:progressBackgroundTint="@color/green" />

    <TextView
        android:id="@+id/tvNameTopic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Cơ bản 1"
        android:textSize="20sp"
        android:textStyle="bold" />
</LinearLayout>