<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_item_review"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/greenResult"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/tv_title_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Viết bằng tiếng Việt:"
            android:textAlignment="center"
            android:textColor="#58a700"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_correct_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Chào tạm biệt!"
            android:textAlignment="center"
            android:textColor="#58a700"
            android:textSize="18dp" />

        <LinearLayout
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/ct_layout_border3"
            android:gravity="center">

            <ImageView
                android:id="@+id/img_Listen_Learn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:clickable="true"
                android:src="@drawable/baseline_volume_up_white_24dp" />
        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>