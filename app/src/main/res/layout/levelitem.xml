<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >
        <ImageView
            android:id="@+id/imgLevel"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:src="@drawable/ic_search"
            android:text="1"
            android:textSize="30dp" />
        <TextView
            android:id="@+id/tvTitleLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@id/imgLevel"
            android:layout_toRightOf="@id/imgLevel"
            android:gravity="center"
            android:text="Level"
            android:textSize="30dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imgDelete"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="127dp"
            android:layout_marginLeft="127dp"
            android:layout_toEndOf="@id/tvTitleLevel"
            android:layout_toRightOf="@id/tvTitleLevel"
            android:src="@drawable/ic_delete" />

        <ImageView
            android:id="@+id/imgEdit"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="26dp"
            android:layout_marginLeft="26dp"
            android:layout_toEndOf="@id/imgDelete"
            android:layout_toRightOf="@id/imgDelete"
            android:src="@drawable/ic_edit" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>