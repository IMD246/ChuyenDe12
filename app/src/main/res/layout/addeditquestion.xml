<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    android:background="@drawable/bg_white_corner_16dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_yellow_corner_16_top_left_top_right"
            android:gravity="center"
            android:padding="12dp"
            android:text="Sửa dữ liệu"
            android:textColor="@color/black"
            android:textSize="16sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">
            <EditText
                android:id="@+id/edtWordItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_white_corner_10_border_gray"
                android:hint="Nhập vào từ vựng"
                android:padding="12dp"
                android:textAlignment="center" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chọn loại từ vựng"
                    android:layout_margin="5dp"
                    android:textColor="@color/black"
                    android:textSize="20sp" />
                <Spinner
                    android:id="@+id/spnTypeWordItem"
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/typeWord"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chọn thể loại"
                    android:layout_margin="5dp"
                    android:textColor="@color/black"
                    android:textSize="20sp" />
                <Spinner
                    android:id="@+id/spnCategoryWord"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:entries="@array/categoryWord"
                    />
            </LinearLayout>
            <EditText
                android:id="@+id/edtMeaningItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_white_corner_10_border_gray"
                android:hint="Nhập vào nghĩa của từ"
                android:padding="12dp"
                android:textAlignment="center" />
            <EditText
                android:id="@+id/svTitleQuestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_white_corner_10_border_gray"
                android:hint="@string/NhapCauHoi"
                android:iconifiedByDefault="true"
                android:padding="12dp"
                android:textAlignment="center" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvTopic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chọn topic: "
                    android:layout_margin="5dp"
                    android:layout_gravity="center"
                    android:textSize="20dp"
                    android:textStyle="bold" />
                <Spinner
                    android:id="@+id/spnQuestion_Topic"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_margin="5dp"
                    tools:ignore="SpeakableTextPresentCheck"
                    />
            </LinearLayout>

            <EditText
                android:id="@+id/edtCorrectAnswer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_white_corner_10_border_gray"
                android:hint="Nhập câu trả lời chính xác"
                android:padding="12dp"
                android:textAlignment="center" />
            <EditText
                android:id="@+id/edtExample"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_white_corner_10_border_gray"
                android:hint="Nhập vào ví dụ"
                android:padding="12dp"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/edtExampleMeaning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_white_corner_10_border_gray"
                android:hint="Nhập vào nghĩa ví dụ"
                android:padding="12dp"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/edtGrammar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_white_corner_10_border_gray"
                android:hint="Nhập vào ngữ pháp"
                android:padding="12dp"
                android:textAlignment="center" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgEditQuestion"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:src="@drawable/ic_search" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnPickImageQuestion"
                    android:layout_width="0dp"
                    android:layout_margin="5dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@drawable/bg_yellow_corner_10"
                    android:text="@string/ch_n_nh"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btnYes"
                    android:layout_width="0dp"
                    android:layout_margin="5dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bg_yellow_corner_10"
                    android:backgroundTint="@color/white"
                    android:text="Sửa"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
                <Button
                    android:id="@+id/btnNo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:alpha="0.7"
                    android:background="@drawable/bg_gray_corner_10"
                    android:backgroundTint="@color/white"
                    android:text="Không"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>