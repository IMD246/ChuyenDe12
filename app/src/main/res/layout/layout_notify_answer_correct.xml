<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rltCheckAnswer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="#d7ffb8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/imgResult"
            android:layout_width="140dp"
            android:layout_height="200dp"
            android:src="@drawable/correct" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">
            <TextView
                android:id="@+id/id_corect_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chính xác!"
                android:textAlignment="center"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="50dp"
                android:textColor="#58a700"
                android:textSize="32sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_continute_notify"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/ct_layout_button3"
        android:elevation="2dp"
        android:text="Tiếp tục"
        android:layout_margin="8dp"
        android:textColor="@color/white"
        android:textSize="18dp" />

</LinearLayout>