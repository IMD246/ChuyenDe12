<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".User.LearnWord.word.WordScreen"
    android:background="#B9DA92"
    android:layout_height="match_parent">







<LinearLayout
    android:layout_margin="20dp"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
   <AutoCompleteTextView
       android:id="@+id/word_autocomplete"
       android:layout_width="match_parent"
       android:layout_weight="8"
       android:layout_height="60dp"
       android:hint="find a Word"
       android:completionThreshold="1"
       android:completionHint="find a word"
       >

   </AutoCompleteTextView>
    <Button
        android:id="@+id/word_btn_searchButton"
        android:layout_weight="2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/ic_baseline_star_checked"
></Button>

</LinearLayout>
    <Button
        android:id="@+id/word_btn_return"
        android:layout_width="100dp"
        android:gravity=""
        android:layout_gravity="center_vertical"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:text="Return">
    </Button>

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:background="@drawable/ic_baseline_arrow_back_24"
            android:layout_gravity="left"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/word_btn_prvPage"
          >

        </Button>
        <TextView

            android:layout_gravity="center"
            android:layout_marginHorizontal="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:text="0"
            android:id="@+id/word_txt_currentPage">

        </TextView>
        <Button
            android:background="@drawable/ic_baseline_arrow_forward_24"
            android:layout_gravity="right"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/word_btn_nextPage"
            >
        </Button>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="20dp"
        android:id="@+id/word_recycleItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </androidx.recyclerview.widget.RecyclerView>




</LinearLayout>