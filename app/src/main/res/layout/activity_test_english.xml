<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".learn.learning.LearningEnglishFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="4dp"
        android:layout_weight="0.5"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_btn_exit"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginStart="4dp"
            android:background="@drawable/ct_learn_img_btn_exit"
            android:clickable="true"
            android:src="@drawable/ic_exit_close" />

        <ProgressBar
            android:id="@+id/learnTopic_progress_bar"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="30dp"
            android:layout_gravity="center" />
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6.75"
        android:id="@+id/frameLayout_Fragment"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2"
        android:gravity="center"
        android:padding="12dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_pass"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="64dp"
            android:layout_marginEnd="40dp"
            android:backgroundTint="@color/l_grey"
            android:text="Bỏ qua" />

        <Button
            android:id="@+id/btn_continute"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="64dp"
            android:backgroundTint="@color/green"
            android:text="Tiếp tục" />
    </LinearLayout>
</LinearLayout>