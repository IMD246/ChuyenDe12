<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="380dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/ct_layout_popup_dialog1"
    android:padding="12dp">


    <TextView
        android:id="@+id/tv_level_topic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Bạn đã hoàn thành khóa huấn luyện Level 1!"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_title_topic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_level_topic"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:text="Bây giờ bạn có thể luyện tập những gì bạn đã học trong Level 1."
        android:textColor="@color/white"
        android:textSize="14sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_learn_topic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_title_topic"
        android:layout_marginTop="20dp"
        android:background="@drawable/ct_layout_button1"
        android:text="Luyện tập"
        android:textColor="@color/yellow" />

</RelativeLayout>