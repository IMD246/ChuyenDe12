<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".alarm.AlarmSubScreen"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:orientation="vertical"
    android:layout_weight="1">
    <TextView
    android:id="@+id/alarm_subScreen_txtTimeNow"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="06:45"
    android:layout_marginVertical="10dp"
    android:layout_marginLeft="20dp"
    android:textSize="40dp"
    android:textStyle="bold"/>
    <TextView
        android:id="@+id/alarm_subScreen_txtDayNow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="T2, 4 thang 10"
        android:layout_marginVertical="10dp"
        android:layout_marginLeft="20dp"
        android:textSize="40dp"
        android:textStyle="bold">
</TextView>
</LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView

            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="Leaning English App"
            android:layout_marginVertical="10dp"
            android:layout_marginLeft="20dp"
            android:textSize="25dp"
            android:textColor="#4E7323"
            android:textStyle="bold"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"

            android:layout_height="match_parent"
            app:cardCornerRadius="50dp">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView

                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="Alarm"
                android:layout_marginVertical="10dp"
                android:layout_marginLeft="20dp"
                android:textSize="25dp"
                android:textColor="#B3A527"
                android:textStyle="bold"/>
            <Button
                android:id="@+id/alarm_subScreen_btn_stop"
                android:text="Dung"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:layout_width="150dp"
                android:layout_height="70dp">

            </Button>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_weight="1">
        <ImageView

            android:layout_gravity="center"
            android:layout_width="60dp"
            android:background="@drawable/ic_baseline_lock_24"
            android:layout_height="60dp">

        </ImageView>
        <TextView

            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:text="vuot len de mo khoa"
            android:layout_marginVertical="10dp"
            android:layout_marginLeft="20dp"
            android:textSize="25dp"
            android:textColor="#4E7323"
            android:textStyle="bold"/>
    </LinearLayout>
</LinearLayout>