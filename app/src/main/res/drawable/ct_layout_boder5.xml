<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false" android:state_selected="false">
        <shape android:layout_height="match_parent" android:shape="rectangle">
            <stroke android:width="2dp" android:color="@color/grey" />
            <corners android:radius="16dp" />
        </shape>
    </item>
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <stroke android:width="2dp" android:color="@color/blue3" />
            <corners android:radius="16dp" />
        </shape>
    </item>
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <stroke android:width="2dp" android:color="@color/blue3" />
            <corners android:radius="16dp" />
        </shape>
    </item>
</selector>
